<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
	<mapper namespace="cate.model.Cate">
	
		<select id="getCateListTotalCount" resultType="int">
			select count(*) from bcate
		</select>
		
		<select id="getCateList" resultType="cate.model.CateBean">
			select * from bcate
			order by bcatenum
		</select>
		
		<select id="getCateByNum" resultType="cate.model.CateBean">
			select * from bcate
			where bcatenum = #{bcatenum}
		</select>
		
		<select id="checkBcate" resultType="int">
			select count(*) from bcate
			where bcate = #{bcate}
		</select>
		
		<update id="updateBcate">
			update bcate 
			set bcate = #{bcate}, bcateimg = #{bcateimg} 
			where bcatenum = #{bcatenum}
		</update>
		
		<delete id="deleteCate">
			delete from bcate
			where bcatenum = #{bcatenum}
		</delete>
		
		<insert id="insertBcate">
			insert into bcate
			values(bcateseq.nextval,#{bcate},#{bcateimg})
		</insert>
	</mapper>